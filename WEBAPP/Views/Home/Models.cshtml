@{
    ViewData["Title"] = "Modelos";
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-12 text-center">
            <h2 class="text-poppins text-primary font-weight-bold">Modelos</h2>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card card-shadow">
                <div class="card-body">
                    <form action="/Home/Create" method="post" class="form-row">
                        @* location,product,date,sa_quantity,temp_mean,temp_max,temp_min,sunshine_quant,event,price *@
                        <div class="form-group col-12">
                            <label for="" class="font-weight-bold">Location</label>
                            <input type="number" step="any" class="form-control" id="" name="Location">
                        </div>
                        <div class="form-group col-12">
                            <label for="" class="font-weight-bold">Product</label>
                            <input type="number" step="any" class="form-control" id="" name="Product">
                        </div>
                        <div class="form-group col-12">
                            <label for="" class="font-weight-bold">Date</label>
                            <input type="date" class="form-control" id="" name="Date">
                        </div>
                        <div class="form-group col-12">
                            <label for="" class="font-weight-bold">Temp. Mean</label>
                            <input type="number" step="any" class="form-control" id="" name="Temp_mean">
                        </div>
                        <div class="form-group col-12">
                            <label for="" class="font-weight-bold">Temp. Max.</label>
                            <input type="number" step="any" class="form-control" id="" name="Temp_max">
                        </div>
                        <div class="form-group col-12">
                            <label for="" class="font-weight-bold">Temp. Min.</label>
                            <input type="number" step="any" class="form-control" id="" name="Temp_min">
                        </div>
                        <div class="form-group col-12">
                            <label for="" class="font-weight-bold">Sunshine Quant</label>
                            <input type="number" step="any" class="form-control" id="" name="Sunshine_quant">
                        </div>
                        <div class="form-group col-12">
                            <label for="" class="font-weight-bold">Event</label>
                            <input type="text" class="form-control" id="" name="Event">
                        </div>
                        <div class="form-group col-12">
                            <label for="" class="font-weight-bold">Price</label>
                            <input type="number" step="any" class="form-control" id="" name="Price">
                        </div>
                        <div class="col-12 text-right">
                            <button class="btn btn-primary btn-shadow">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <script>
    @if (ViewData["prediction"] != null)
    {
        @Html.Raw("Swal.fire('La prediccion de ventas es: ' + ")
                  @ViewData["prediction"]
        @Html.Raw(")");
    }
    </script>
}