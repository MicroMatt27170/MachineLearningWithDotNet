@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-6">
            <h2 class="text-poppins text-primary font-weight-bold">Dashboard</h2>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-12 col-md-4 mb-2">
            <div class="card card-shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <h3 class="font-weight-bold">1.00</h3>
                            <h5>Parametro 1</h5>
                        </div>
                        <div class="col-4">
                            <div class="card card-round bg-primary">
                                <div class="card-body text-center">
                                    <i class="fa fa-times fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 mb-2">
            <div class="card card-shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <h3 class="font-weight-bold">2.00</h3>
                            <h5>Parametro 2</h5>
                        </div>
                        <div class="col-4">
                            <div class="card card-round bg-primary">
                                <div class="card-body text-center">
                                    <i class="fa fa-check fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 mb-2">
            <div class="card card-shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <h3 class="font-weight-bold">3.00</h3>
                            <h5>Parametro 3</h5>
                        </div>
                        <div class="col-4">
                            <div class="card card-round bg-primary">
                                <div class="card-body text-center">
                                    <i class="fa fa-plus fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3 justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card card-shadow">
                <div class="card-body">
                    <canvas id="myChart" width="100" height="50"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-poppins text-primary font-weight-bold">Registros</h2>
        </div>
        <div class="col-6 text-right">
            <div class="btn btn-primary btn-shadow ripple">Descargar CSV</div>
        </div>
        <div class="col-12">
            <div class="card card-shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover display">
                            <thead>
                                <tr>
                                    <th>Parametro 1</th>
                                    <th>Parametro 2</th>
                                    <th>Parametro 3</th>
                                    <th>Parametro 4</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Dato 1</td>
                                    <td>Dato 2</td>
                                    <td>Dato 3</td>
                                    <td>Dato 4</td>
                                </tr>
                                <tr>
                                    <td>Dato 1</td>
                                    <td>Dato 2</td>
                                    <td>Dato 3</td>
                                    <td>Dato 4</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>