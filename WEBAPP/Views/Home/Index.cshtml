@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-6">
            <h2 class="text-poppins text-primary font-weight-bold">Dashboard</h2>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-12 col-md-4 mb-2">
            <div class="card card-shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <h3 class="font-weight-bold">@ViewData["totalCount"]</h3>
                            <h5>Cantidad de Predicciones</h5>
                        </div>
                        <div class="col-4">
                            <div class="card card-round bg-primary">
                                <div class="card-body text-center">
                                    <i class="fa fa-eye fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 mb-2">
            <div class="card card-shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <h3 class="font-weight-bold">@ViewData["predictionCount"]</h3>
                            <h5>Cantidad de Productos</h5>
                        </div>
                        <div class="col-4">
                            <div class="card card-round bg-primary">
                                <div class="card-body text-center">
                                    <i class="fa fa-box fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 mb-2">
            <div class="card card-shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <h3 class="font-weight-bold">@ViewData["showResults"]</h3>
                            <h5>Resultados Filtrados</h5>
                        </div>
                        <div class="col-4">
                            <div class="card card-round bg-primary">
                                <div class="card-body text-center">
                                    <i class="fa fa-filter fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*<div class="row mb-3 justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card card-shadow">
                <div class="card-body">
                    <canvas id="myChart" width="100" height="50"></canvas>
                </div>
            </div>
        </div>
    </div>*@
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-poppins text-primary font-weight-bold">Registros</h2>
        </div>
        @*<div class="col-6 text-right">
            <div class="btn btn-primary btn-shadow ripple">Descargar CSV</div>
        </div>*@
        <div class="col-12">
            <div class="card card-shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover display table-sm">
                            <thead>
                                <tr>
                                    <th>Location</th>
                                    <th>Product</th>
                                    <th>Date</th>
                                    <th>Sa_quantity</th>
                                    <th>Temp_mean</th>
                                    <th>Temp_max</th>
                                    <th>Temp_min</th>
                                    <th>Sunshine_quant</th>
                                    <th>Event</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>